{
  "manifest_version": 2,
  "name": "Youtube Party",
  "description": "Sync your Youtube video with your friends and chat",
  "version": "0.0.4",
  "page_action": {
    "default_popup": "popup.html",
    "default_title": "Extension can be activated only on Youtube Videos!"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "icons": {
    "16": "img/partylogo16.png",
    "32": "img/partylogo32.png",
    "48": "img/partylogo48.png",
    "64": "img/partylogo64.png",
    "128": "img/partylogo128.png"
  },
  "permissions": [
    "identity",
    "tabs",
    "declarativeContent",
    "webNavigation",
    "https://*.youtube.com/*",
    "storage"
  ],
  "content_scripts": [{
    "matches": ["https://*.youtube.com/watch?*"],
    "js": ["content_script.js"],
    "run_at": "document_idle"
  }]
}
